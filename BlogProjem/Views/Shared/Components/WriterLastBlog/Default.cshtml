@using EntityLayer.Concrete
@model List<Blog>
<div class="recent">
    <h3>Yazara Ait Diğer Postlar</h3>
    @foreach (var item in Model)
    {
        <div class="recent-grids">
                <div class="recent-grid">
                    <ul>
                        <li><h4><a href="/Blog/BlogReadAll/@item.BlogID">@item.BlogTitle</a></h4></li>
                        
                        
                    </ul>
                
                </div>
            </div>
    
    }
    <div class="clearfix"> </div>


</div>
