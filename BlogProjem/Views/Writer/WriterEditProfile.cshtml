@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1 class="text-succes text-center m-2 p-2 ">PROFİLİM</h1>

@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Profil Bilgileri</h4>
                <p class="card-description">
                    Profil Bilgileri
                </p>
                @Html.HiddenFor(x => x.WriterID, new { @class = "form-control" })
                <form class="forms-sample">
                    <div class="form-group">
                        <label for="exampleInputName1">AD</label>
                        @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">EMAİL</label>
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">ŞİFRE</label>
                        @Html.PasswordFor(x => x.WriterPassword, new { @class = "form-control" })

                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Yazar Görsel</label>
                        <br/>
                        <input type="file" name="WriterImage" class="form-control-file">
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">EKSTRA</label>
                        @Html.TextBoxFor(x => x.WriterAbout, new { @class = "form-control" })

                    </div>
                    <button type="submit" class="btn btn-primary me-2">KAYDET</button>
                    <button class="btn btn-light">İPTAL</button>
                </form>
            </div>
        </div>
    </div>

}

